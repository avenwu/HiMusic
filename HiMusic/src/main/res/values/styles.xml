<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RedActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="actionBarStyle">@style/RedActionBar</item>
    </style>

    <style name="RedActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_yellow_bg</item>
        <item name="background">@drawable/actionbar_yellow_bg</item>
    </style>

    <style name="ArtistItemTitile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
