<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RedActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="actionBarStyle">@style/RedActionBar</item>
    </style>

    <style name="RedActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_yellow_bg</item>
        <item name="background">@drawable/actionbar_yellow_bg</item>
    </style>

    <style name="MusicItemTitile" parent="MusicItemArtist">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="MusicItemArtist" parent="MarqueeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="MarqueeText">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="BoldArtistAlbumText" parent="ArtistAlbumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ArtistAlbumText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
